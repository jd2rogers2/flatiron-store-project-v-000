<h1><%= @category.title %></h1>

<ul>
  <% @category.items.each do |item| %>
    <li>
      <%= link_to "#{item.title} - $#{item.price.to_f/100}", item_path(item) %>
      <% if user_signed_in? %>
        <%= form_for LineItem.new do |f| %>
          <%= hidden_field_tag "item_id", "#{item.id}"  %>
          <%= f.submit value: "Add to Cart"%>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>